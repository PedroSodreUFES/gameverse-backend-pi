generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GameType {
  RPG
  ACAO
  ESPORTE
  MUNDO_ABERTO
  SIMULADOR
  TERROR
  EDUCATIVO
  CARTAS
  TABULEIRO
  AVENTURA
}

model User {
  id       String  @id @default(uuid())
  username String  @unique
  email    String  @unique
  password String
  foto     String?

  ratings Rating[]

  @@map("user")
}

model Game {
  id          String   @id @default(uuid())
  name        String
  releaseDate DateTime @map("release_date")
  foto        String
  category    GameType

  ratings Rating[]

  @@map("game")
}

model Rating {
  id          String   @id @default(uuid())
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  rate        Int

  user     User   @relation(fields: [authorId], references: [id])
  authorId String @map("author_id")

  game   Game   @relation(fields: [gameId], references: [id])
  gameId String

  comments Comment[]

  @@map("rating")
}

model Comment {
  id      String @id @default(uuid())
  content String
  rate    Int?

  rating   Rating @relation(fields: [ratingId], references: [id])
  ratingId String

  @@map("comment")
}
